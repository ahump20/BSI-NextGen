# BSI-NextGen Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# SPORTS DATA APIs
# ============================================================================

# SportsDataIO API Key (for NFL/NBA)
# Get your key at: https://sportsdata.io/
SPORTSDATAIO_API_KEY=your_api_key_here

# ============================================================================
# MMI (Moment Mentality Index) Service
# ============================================================================

# MMI Python service URL
# Local development: http://localhost:8001
# Railway deployment: https://mmi-service-production-xxxx.up.railway.app
# Docker: http://mmi-api:8001
MMI_SERVICE_URL=http://localhost:8001

# ============================================================================
# APPLICATION
# ============================================================================

# Application URL (for absolute URLs, social sharing, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================================================
# AUTHENTICATION (Optional - if using Auth0)
# ============================================================================

# AUTH0_DOMAIN=your-tenant.us.auth0.com
# AUTH0_CLIENT_ID=your_client_id
# AUTH0_CLIENT_SECRET=your_client_secret
# JWT_SECRET=your_jwt_secret

# ============================================================================
# CLOUDFLARE (Optional - for production deployment)
# ============================================================================

# CLOUDFLARE_API_TOKEN=your_api_token
# CLOUDFLARE_ACCOUNT_ID=your_account_id

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================

# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=blazesportsintel.com
