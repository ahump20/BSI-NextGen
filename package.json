{
  "name": "bsi-nextgen",
  "version": "1.0.0",
  "description": "BSI-NextGen monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @bsi/shared build && pnpm --filter @bsi/api build && pnpm --filter @bsi/web build",
    "dev": "pnpm --filter @bsi/web dev",
    "dev:api": "pnpm --filter @bsi/api dev",
    "preview": "pnpm --filter @bsi/web preview",
    "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist packages/*/.next packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lighthouse": "^13.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
