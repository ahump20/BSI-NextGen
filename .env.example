# Sandlot Sluggers Environment Variables
# Copy this file to .env.local and fill in your actual values

# ========================================
# Sentry Error Tracking (Optional)
# ========================================
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=

# Application version (auto-set in CI/CD)
VITE_APP_VERSION=1.0.0

# ========================================
# Blaze Sports Intel Integration
# ========================================
# Required for stats synchronization with blazesportsintel.com
# Get your credentials from Blaze Sports Intel dashboard

# API base URL (default: https://api.blazesportsintel.com)
VITE_BLAZE_API_URL=https://api.blazesportsintel.com

# OAuth2 Client Credentials
VITE_BLAZE_CLIENT_ID=
VITE_BLAZE_CLIENT_SECRET=

# Production API Key
VITE_BLAZE_API_KEY=

# ========================================
# Development Settings
# ========================================
# These are automatically set by Vite
# MODE=development|production
# PROD=true|false
# DEV=true|false
