{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* React JSX */
    "jsx": "react-jsx",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["lib/*"],
      "@functions/*": ["functions/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["lib/utils/*"],
      "@api/*": ["lib/api/*"],
      "@adapters/*": ["lib/adapters/*"],
      "@db/*": ["lib/db/*"],
      "@auth/*": ["lib/auth/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Cloudflare Workers */
    "types": ["@cloudflare/workers-types", "vitest/globals", "@types/node"]
  },
  "include": ["src", "functions", "lib", "types", "tests"],
  "exclude": ["node_modules", "dist", ".wrangler"]
}
