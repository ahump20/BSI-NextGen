{
  "name": "bsi-nextgen",
  "version": "1.0.0",
  "description": "BSI-NextGen monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @bsi/web build && pnpm --filter @bsi/worker build",
    "dev": "pnpm --filter @bsi/web dev",
    "preview": "pnpm --filter @bsi/web start",
    "lint": "pnpm --filter @bsi/web lint && pnpm --filter @bsi/worker lint",
    "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "pnpm --filter @bsi/web type-check",
    "test": "pnpm --filter @bsi/worker test"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
