# ========================================
# BLAZE SPORTS INTEL - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ========================================
# APPLICATION SETTINGS
# ========================================
NODE_ENV=development
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="Blaze Sports Intel"

# ========================================
# CLOUDFLARE (Production)
# ========================================
# Required for deployment - get from Cloudflare dashboard
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ZONE_ID=

# D1 Database (auto-configured in wrangler.toml for production)
# DATABASE_ID=d3d5415d-0264-41ee-840f-bf12d88d3319

# KV Namespace (auto-configured in wrangler.toml for production)
# KV_NAMESPACE_ID=1b4e56b25c1442029c5eb3215f9ff636

# ========================================
# AUTHENTICATION & AUTHORIZATION
# ========================================
# Auth0 Configuration
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_AUDIENCE=https://api.blazesportsintel.com
AUTH0_CALLBACK_URL=http://localhost:5173/callback

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=

# Session Configuration
SESSION_SECRET=
SESSION_COOKIE_NAME=blaze_session
SESSION_MAX_AGE=604800000  # 7 days in milliseconds

# ========================================
# SPORTS DATA APIS
# ========================================

# NCAA Stats API
# Get from: https://www.ncaa.com/stats (or NCAA partner API)
NCAA_STATS_API_KEY=
NCAA_STATS_BASE_URL=https://stats.ncaa.org/api/v1

# MLB Stats API (Free, no key required)
MLB_STATS_BASE_URL=https://statsapi.mlb.com/api/v1
MLB_STATS_CACHE_TTL=300  # 5 minutes

# SportsDataIO (Paid - for comprehensive coverage)
# Get from: https://sportsdata.io
SPORTSDATAIO_API_KEY=
SPORTSDATAIO_BASE_URL=https://api.sportsdata.io/v3

# D1Baseball Rankings API
# Get from: https://d1baseball.com/api (if available) or scrape ethically
D1BASEBALL_API_KEY=
D1BASEBALL_BASE_URL=

# Perfect Game API (Youth Baseball)
# Get from: https://www.perfectgame.org
PERFECT_GAME_API_KEY=
PERFECT_GAME_BASE_URL=

# College Football Data API (Free)
# Get from: https://collegefootballdata.com
CFB_DATA_API_KEY=
CFB_DATA_BASE_URL=https://api.collegefootballdata.com

# ========================================
# CACHING & RATE LIMITING
# ========================================
# Redis (local development - mimics KV)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=blaze:

# Cache TTLs (in seconds)
CACHE_TTL_LIVE_SCORES=30
CACHE_TTL_STANDINGS=300
CACHE_TTL_TEAM_STATS=600
CACHE_TTL_PLAYER_STATS=3600
CACHE_TTL_HISTORICAL=86400  # 24 hours

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# ERROR TRACKING & MONITORING
# ========================================
# Sentry (Optional but recommended)
# Get from: https://sentry.io
VITE_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Cloudflare Analytics (auto-enabled in production)
ENABLE_ANALYTICS=true

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================
# Blaze Sports Intel Platform Integration
VITE_BLAZE_API_URL=https://api.blazesportsintel.com
VITE_BLAZE_CLIENT_ID=
VITE_BLAZE_CLIENT_SECRET=
VITE_BLAZE_API_KEY=

# OpenAI (for AI-powered analysis - optional)
OPENAI_API_KEY=

# Anthropic Claude (alternative to OpenAI)
ANTHROPIC_API_KEY=

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_COLLEGE_BASEBALL=true
ENABLE_D1_RANKINGS=true
ENABLE_MLB_INTEGRATION=true
ENABLE_USER_AUTH=true
ENABLE_MOBILE_FEATURES=true
ENABLE_EXPERIMENTAL_3D=false

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Local development ports
VITE_DEV_PORT=5173
WRANGLER_DEV_PORT=8788

# Debug mode
DEBUG=false
VERBOSE_LOGGING=false

# Local database (for migrations testing)
LOCAL_DB_PATH=.wrangler/state/v3/d1/miniflare-D1DatabaseObject

# ========================================
# TESTING
# ========================================
# Playwright E2E Testing
PLAYWRIGHT_BASE_URL=http://localhost:5173
PLAYWRIGHT_HEADED=false

# Test database
TEST_DATABASE_URL=sqlite:memory:

# ========================================
# DEPLOYMENT
# ========================================
# Environment (development|staging|production)
ENVIRONMENT=development

# CDN & Assets
ASSETS_BASE_URL=/assets
CDN_URL=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8788,https://blazesportsintel.com
